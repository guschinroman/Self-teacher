<UserControl x:Class="SelfTeacher.WinApp.Views.AuthView.RegisterFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel>

        <!-- sign up header -->
        <TextBlock Text="{Resx RegisterForm.SignIn, ResxName=RegisterForm}"
            FontSize="{StaticResource FontSizeLarge}"
            FontFamily="{StaticResource LatoRegular}"
            Foreground="{StaticResource TextWhiteBrush}" />


        <Button Style="{StaticResource TextButton}" Content="{Resx RegisterForm.GoBack, ResxName=RegisterForm}"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom" />

    </StackPanel>
</UserControl>
